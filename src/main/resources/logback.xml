<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property scope="context" name="pattern_stdout"
        value="%highlight(%.-5level)|%green(%date{yyyy-MM-dd HH:mm:ss.SSS})|%boldMagenta([%thread])|%yellow(%logger{70}:%boldYellow(%line)) - %msg%n%red(%rEx)" />
    <property scope="context" name="pattern_log" value="%-4relative [%thread] %-5level %logger{35} - %msg %n"/>
    <property scope="context" name="pattern_audit" value="%m %throwable{0}%n" />    
    <property scope="context" name="pattern_log2" value="%d{yyyy/MM/dd HH:mm:ss,SSS} [%thread] %-5level %logger{36} - %m %throwable{0}%n" />
    <property scope="context" name="pattern_sql" value="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread][%logger{0}] %m%n" />
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>
    
        <resetJUL>true</resetJUL>
    </contextListener>
    
    <consolePlugin />
    <jmxConfigurator />
    <withJansi>false</withJansi>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <pattern>${pattern_stdout}</pattern>
            <pattern></pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>restDC-${bySecond}.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>restDC.%d{yyyyMMdd}.log
            </fileNamePattern>
        </rollingPolicy>
        <append>false</append>
        <encoder>
            <pattern>${pattern_log}</pattern>
        </encoder>
        
    </appender>

    
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>restDCSQL.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
           <fileNamePattern>restDCSQL.%i.log.zip</fileNamePattern>
          <minIndex>1</minIndex>
          <maxIndex>5</maxIndex>
        </rollingPolicy>
      <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
       <maxFileSize>50MB</maxFileSize>
      </triggeringPolicy>
     <encoder>
        <pattern>${pattern_sql}</pattern>
     </encoder>
    </appender> 
    
  
     <appender name="ASYNC_500_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE" />
      </appender>

     <logger name="jdbc.sqlonly" additivity="false" level="INFO">
        <appender-ref ref="Sql" />
        <appender-ref ref="CONSOLE" />
     </logger>
    
 

    <logger name="org.springframework" level="info" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
        
  
    <logger name="org.hibernate" level="info" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="pl.java.scalatech" additivity="false">
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </logger>


    <logger name="jdbc.sqltiming" additivity="false">
        <level value="info" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.resultset" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.audit" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.sqlonly" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.resultsettable" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.connection" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="jdbc.resultsettable" additivity="false">
        <level value="error" />
        <appender-ref ref="Sql" />
    </logger>
    
    <logger name="org.h2" additivity="false" level="info" >
       <appender-ref ref="CONSOLE" />
    </logger>
    
    
     <logger name="com.zaxxer.hikari" level="debug" additivity="false">
       <appender-ref ref="CONSOLE" />
     </logger>
     
     <logger name="com.zaxxer.hikari.HikariPool" level="debug" additivity="false">
        <appender-ref ref="CONSOLE" />
     </logger>

    <logger name="org.hibernate.SQL" additivity="false">
       <level value="DEBUG" />
       <appender-ref ref="SQL_FILE" />
    </logger>
    <logger name="org.hibernate.type" additivity="false">
      <level value="TRACE" />
      <appender-ref ref="SQL_FILE" />
    </logger>
    
    <root>
     <level value="OFF" />
     <appender-ref ref="CONSOLE" />
     <appender-ref ref="ASYNC_500_FILE"/>
   </root>
   
   <logger name="sql_and_problem" additivity="false">
      <level value="INFO" />
      <appender-ref ref="SQL_FILE"/>
      <appender-ref ref="PROBLEM_FILE" />
   </logger>
   
</configuration>